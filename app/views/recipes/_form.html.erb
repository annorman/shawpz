<%= nested_form_for @recipe do |f| %>
    <div id="error_container" class="row">
      <div class="large-11 columns">
        <% if @recipe.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited
                this recipe from being saved:</h2>
              <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
    </div>

    <div class="row">
        <div class="large-4 columns"><%= f.label :title %></div>
        <div class="large-8 columns"><%= f.text_field :title %></div>
    </div>
    <div class="row">
        <div class="large-4 columns"><%= f.label :description %></div>
        <div class="large-8 columns"><%= f.text_area :description %></div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <h5>Ingredients</h5>
      </div>
    </div>
    <%= f.fields_for :ingredients do |builder| %>
        <%= render 'ingredients/form', :i => builder %>
    <% end %>
    <%= f.link_to_add "add new ingredient", :ingredients %>

    <p>
    <%= f.submit %>
    </p>
<% end %>